<h1>商品詳細</h1>
<div>
  <%= image_tag @item.get_image(400,200) %>
</div>
<table>
  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <th>税込価格</th>
    <td><%= @item.add_tax_price %>円</td>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <td>
      <% if @item.is_active == true  %>
        <span class="text-success">販売中</span>
      <% else %>
        <span class="text-danger">販売停止中</span>
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %></th>
  </tr>
</table>
